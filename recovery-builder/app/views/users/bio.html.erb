
<div class="show">
<h1 id="username"><%=@user.name%><br></h1>


<h3><p id="userbio"><%=@user.bio%><%=@user.bio%><p></h3>
<a href="#" id="next" data-id="<%=@user.id%>">View Next Resident Bio</a>

</div>

<script type="text/javascript">
  $(function(){

    $('#next').on('click', function(e){
      var nextId = parseInt($('#next').attr("data-id")) + 1;
      $.getJSON("/users/" + nextId + ".json", function(data){
        $("#username").text(data["name"])
        $("#userbio").text(data["bio"])
        $('#next').attr("data-id", nextId)


    })
    e.preventDefault()
  })
})

</script>
